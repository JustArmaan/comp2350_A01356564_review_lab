<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-10 is-offset-1 notification is-info is-light box container">
          <div class="title">Purchase Items</div>
          <% if (locals.result) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Cost</th>
                  <th>Quantity</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < result.length; i++) { %>
              <tr>
                <td><%= result[i].item_name %></td>
                <td><%= result[i].item_description %></td>
                <td><%= result[i].cost %></td>
                <td><%= result[i].quantity %></td>
                <td>
                  <a href="/addQuantity?id=<%= result[i].purchase_item_id %>">
                    <span class="icon is-small">  <i class="fas fa-caret-square-up"></i> </span
                  ></a>
                </td>
                <td>
                  <a href="/removeQuantity?id=<%= result[i].purchase_item_id %>">
                    <span class="icon is-small">  <i class="fas fa-caret-square-down"></i> </span
                  ></a>
                </td>
                <td>
                  <a href="/deleteItem?id=<%= result[i].purchase_item_id %>">
                    <span class="icon is-small">  <i class="fas fa-trash"></i> </span
                  ></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="4">There are <%= i %> items for a total of $<%= cost %> </td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>
          <form action="/addItem" method="post">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add New Purchase Item</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input name="item_name" class="input" type="text" placeholder="Name">
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="description" class="input" type="text" placeholder="Description">
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="cost" class="input" type="text" placeholder="Cost">
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="quantity" class="input" type="text" placeholder="Quantity">
                  </p>
                </div>
                <div class="field">
                  <button class="button is-link">
                    <span>Add</span>
                    <span class="icon is-small">
                      <i class="fas fa-user-plus"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
